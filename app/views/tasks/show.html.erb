<div class="container">
  <div class="d-flex justify-content-between align-items-baseline">
    <h2 class="display-4 title"><%= @task.title %></h2>
  <%= link_to "Edit this task", edit_task_path(@task), class: 'btn btn-primary'%>

  </div>
  <div class="card task-detail border-0 p-3">
    <p><%= @task.details %></p>
  </div>
  <div class="card border-0">
    <p>
      <% if @task.completed %>
      <input type="checkbox" id="completed" checked>
      <label for="completed"> This task is completed</label>
      <% else %>
      <input type="checkbox" id="completed">
      <label for="completed"> This task is not completed yet</label>
      <% end %>
    </p>
  </div>
  <hr>
  <div>
    <i class="fas fa-history"></i> <%= link_to "Back to list", tasks_path %>

  </div>
</div>
